<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ejercioImage"
            android:layout_width="182dp"
            android:layout_height="89dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagen del ejercicio"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ejercicioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre ejercicio"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Repeticiones Recomendadas: ">
            </TextView>
            <TextView
                android:id="@+id/ejercicioReps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_borrar"
                    android:text="Borrar" />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginStart="5dp"
                    android:id="@+id/btnEditar"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_editar"
                    android:text="editar" />

            </LinearLayout>
        </LinearLayout>
        <!-- BotÃ³n de eliminar -->


    </LinearLayout>

</androidx.cardview.widget.CardView>